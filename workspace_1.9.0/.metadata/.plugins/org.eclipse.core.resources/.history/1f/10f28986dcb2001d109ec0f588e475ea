#include "main.h"
#include "cmsis_os.h"

#include "FreeRTOS.h"
#include "semphr.h"

extern UART_HandleTypeDef huart1;

int wifi_server(void);

void TareaWebServer(void *pArg)
{
	wifi_server();
}

void CreateTasks()
{
	xTaskCreate(serialRxTask, "tareaRxSerial", 128, NULL, 1, &serialRxTaskHandle);
	  xTaskCreate(serialTxTask, "tareaTxSerial", 128, NULL, 1, &serialTxTaskHandle);
	  xTaskCreate(TareaWebServer,"TareaWebServer", 256, NULL,1, NULL);
}
